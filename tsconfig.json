{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["dom", "es2018"],
    "sourceMap": true,
    "declaration": false,
    "outDir": "./dist",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["*"],
      "@src/*": ["src/*"]
    },
    "rootDir": "./src",
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types", "src/typings"]
  },
  "include": ["src"],
  "exclude": ["src/@linked"]
}
