//
// tsconfig.json for /scripts
//
{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["dom", "es2018"],
    "sourceMap": false,
    "declaration": false,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": ["*"],
      "@src/*": ["../src/*"]
    }
  },
  "exclude": ["**/_exclude"]
}
